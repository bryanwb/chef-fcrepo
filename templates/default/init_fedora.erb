#! /bin/sh
### BEGIN INIT INFO
# Provides:          start_tomcat
# Required-Start:    $mysql $network $remote_fs $syslog $mulgara
# Required-Stop:     $network $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Init script for a custom tomcat installation
# Description:       This file is the init script to start and stop Tomcat on boot 
#                    and shutdown times.
### END INIT INFO

# Author: Enrico Anello <enrico.anello@fao.org>
# Modified for Vagrant Install: Nicholas Waltham <Nicholas.Waltham@fao.org>

touch /var/lock/start_tomcat
USER=vagrant

export JAVA_HOME=/usr/lib/jvm/jdk1.6.0_30/
#export MYSQL_ROOT=/usr/local/mysql
#export PATH=$PATH:$JAVA_HOME/bin:$MYSQL_ROOT/bin
export PATH=$PATH:$JAVA_HOME/bin
export FEDORA_HOME=/var/fedora
export CATALINA_HOME=$FEDORA_HOME/tomcat
export CATALINA_OPTS='-Dfedora.fesl.pep_nocache=true -Xmx512M -Xms512M -XX:MaxPermSize=512M -Dfile.encoding=UTF-8 -Djavax.net.ssl.trustStore=/var/fedora/server/truststore -Djavax.net.ssl.trustStorePassword=tomcat'
export PATH=$FEDORA_HOME/server/bin:$FEDORA_HOME/client/bin:$PATH

RETVAL=0
 
case "$1" in
    start)
      su $USER -c $CATALINA_HOME/bin/startup.sh > /dev/null 2>&1
      RETVAL=$?
  ;;
    stop)
      su $USER -c $CATALINA_HOME/bin/shutdown.sh > /dev/null 2>&1
      RETVAL=$?
  ;;
    status)
      RETVAL=$?
  ;;
    *)
      echo "Usage: god {start|stop|status}"
      exit 1
  ;;
esac
 
exit $RETVAL
