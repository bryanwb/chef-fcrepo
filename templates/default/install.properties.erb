# Fedora installation options
#
# Fedora 3.5 with FeSL AuthN and no AuthZ

# basic Fedora installation properties
install.type=custom
deploy.local.services=false
fedora.admin.pass=fedoraAdmin
fedora.home=<%= node['fedora']['home'] %>
fedora.serverContext=fedora
fedora.serverHost=<%= node.name %>
llstore.type=akubra-fs

# servlet container
servlet.engine=included
tomcat.home=<%= node['fedora']['home'] %>/tomcat
tomcat.http.port=8080
tomcat.shutdown.port=8005
tomcat.ssl.port=8443

# authentication
fesl.authn.enabled=true

# authorisaton
fesl.authz.enabled=false
xacml.enabled=false
apia.auth.required=false

# ssl
ssl.available=true
apia.ssl.required=false
apim.ssl.required=true
keystore.file=included

# database
database=mysql
database.driver=included
database.mysql.driver=included
database.jdbcDriverClass=com.mysql.jdbc.Driver
database.mysql.jdbcDriverClass=com.mysql.jdbc.Driver
database.jdbcURL=jdbc\:mysql\://localhost/fedora?useUnicode\=true&amp;characterEncoding\=UTF-8&amp;autoReconnect\=true
database.mysql.jdbcURL=jdbc\:mysql\://localhost/fedora?useUnicode\=true&amp;characterEncoding\=UTF-8&amp;autoReconnect\=true
database.password=fedoraAdmin
database.username=fedoraAdmin

# messaging
messaging.enabled=true
messaging.uri=vm\:(broker\:(tcp\://localhost\:61616))

# resource index
ri.enabled=true
