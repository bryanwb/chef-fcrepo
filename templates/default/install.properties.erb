# Fedora installation options
#
# Fedora 3.5 with FeSL AuthN and no AuthZ

# basic Fedora installation properties
install.type=custom
deploy.local.services=false
fedora.admin.pass=fedoraAdmin
fedora.home=<%= node['fedora']['home'] %>
fedora.serverContext=fedora
fedora.serverHost=<%= node['fqdn'] %>
llstore.type=akubra-fs

# servlet container
servlet.engine=included
tomcat.home=<%= node['fedora']['home'] %>/tomcat
tomcat.http.port=8080
tomcat.shutdown.port=8005
tomcat.ssl.port=8443

# authentication
fesl.authn.enabled=true

# authorisaton
fesl.authz.enabled=false
xacml.enabled=false
apia.auth.required=false

# ssl
ssl.available=true
apia.ssl.required=false
apim.ssl.required=true
keystore.file=included

# database
database=postgresql
database.driver=<%= Chef::Config[:file_cache_path] %>/postgresql-9.0-801.jdbc4.jar
database.postgresql.driver=<%= Chef::Config[:file_cache_path] %>/postgresql-9.0-801.jdbc4.jar
database.jdbcDriverClass=org.postgresql.Driver
database.postgresql.jdbcDriverClass=org.postgresql.Driver
database.jdbcURL=jdbc\:postgresql\://<%= node['fedora']['db']['host'] %>/fedora
database.postgresql.jdbcURL=jdbc\:postgresql\://<%= node['fedora']['db']['host'] %>/fedora
database.password= <%= node['fedora']['db']['password'] %>
database.username=<%= node['fedora']['db']['username'] %>

# messaging
messaging.enabled=true
messaging.uri=vm\:(broker\:(tcp\://localhost\:61616))

# resource index
ri.enabled=true
